extends ../layout
block content
    .homepage
      .sign-in.form-decorate
        h2 Sign In
        form.form-inline(method='post', action='/signin')
                if(typeof(errorMessage) !== 'undefined')
                    span.error-msg #{errorMessage}
                p
                    input#username.form-control.transparent-textbox.customized-textbox(type='text', name='username', placeholder='username', required='true')
                P
                    input#password.form-control.transparent-textbox.customized-textbox(type='password', name='password', placeholder='password', required='true')
                p
                    input#signin.form-control.btn.btn-default.transparent-textbox(type='submit', name='signin', value='sign in')
                    a.alt-link.cursor-hand(title='register') register


       .sign-up.dont-show.form-decorate
        h2 Sign Up
        form.form-inline(method='post', action='/signup')
                if(typeof(errorMessage) !== 'undefined')
                    span #{errorMessage}
                p
                    input#username.form-control.transparent-textbox.customized-textbox(type='text', name='username', placeholder='username', required='true')
                P
                    input#password.form-control.transparent-textbox.customized-textbox(type='password', name='password', placeholder='username', required='true')
                p
                    input#signup.form-control.btn.btn-default.transparent-textbox(type='submit', name='signup', value='register')
                    a.alt-link.cursor-hand(title='Sign In') sign In